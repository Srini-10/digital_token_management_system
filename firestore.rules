rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper functions ─────────────────────────────────────────────────
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuth() && request.auth.uid == uid;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuth() && getUserRole() in ['admin', 'superadmin'];
    }

    // ── Users ─────────────────────────────────────────────────────────────
    // Any authenticated user can create/read their own profile.
    // Admins can read all profiles.
    match /users/{uid} {
      allow read:   if isOwner(uid) || isAdmin();
      allow create: if isOwner(uid);
      allow update: if isOwner(uid) || isAdmin();
      allow delete: if isAdmin();
    }

    // ── Departments ───────────────────────────────────────────────────────
    // Public read (needed for booking + live screen).
    // Only admins can write.
    match /departments/{deptId} {
      allow read:  if true;
      allow write: if isAdmin();
    }

    // ── Slots ─────────────────────────────────────────────────────────────
    // Public read (citizens need to see available slots).
    // Any authenticated user can create slots (via the new auto-generation UI logic).
    // Authenticated users can update booked_count during booking. Admins can delete.
    match /slots/{slotId} {
      allow read:   if true;
      allow create, update: if isAuth(); 
      allow delete: if isAdmin();
    }

    // ── Tokens ────────────────────────────────────────────────────────────
    // Citizens can create and read their own tokens.
    // Admins can read all tokens and update status.
    match /tokens/{tokenId} {
      allow create: if isAuth();
      allow read:   if isAuth();
      allow update: if isAdmin() || (isAuth() && resource.data.user_id == request.auth.uid);
      allow delete: if isAdmin();
    }

    // ── Holidays ──────────────────────────────────────────────────────────
    // Public read; admin write.
    match /holidays/{holId} {
      allow read:  if true;
      allow write: if isAdmin();
    }
  }
}
